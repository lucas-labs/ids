{
    "files.exclude": {
        // 📚 projects
        "ui": false,
        "server": false,

        // 📦 packages, build, etc
        "**/Taskfile.yaml": true,
        "**/node_modules": true,
        "**/Cargo.lock": true,
        "**/bun.lockb": true,
        "**/target": true,
        "**/dist": true,

        // ⚙️ config
        "coco.yml": true,
        "**/vite.config.ts": true,
        "**/tsconfig.json": true,

        // 📝 docs
        // "README.md": true,
        // "LICENSE": true,

        // 🗑️
        "*.code-workspace": true,
        ".gitignore": true,
        ".gitattributes": true,
        ".vscode": true,
        ".git": true,
        "**/.task": true,

        // 🎨 formatting / linting
        // "**/biome.jsonc": true,

        // -----------------------
        // ===========> 🖥️ server
        // -----------------------

        "server/app": false,
        "server/cli": false,
        "server/server": false,
        "server/public": false,

        // -----------------------
        // ===========> 📲 ui
        // -----------------------

        "ui/postcss.config.*": true
    },

    "[rust]": {
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
    }
}
